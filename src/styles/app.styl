@import url('https://fonts.googleapis.com/css?family=Montserrat:500,600,700&display=swap')
@import './_variables.styl'

body
    font-family 'Montserrat', sans-serif
    font-weight 500
    display flex
    justify-content center
    align-items center
    width 100vw
    height 100vh
    margin 0
    padding 0
    background black
    color white
    .location-wrapper
        border 4px solid blue
        padding 20px
        .city, .coords
            input, button
                margin 10px
                padding 4px 8px
                border 2px solid white
                background transparent
                color white
            button
                font-size 20px
                padding 4px 30px
        .coords
            display flex
            justify-content center
        
    .weather-wrapper
        border 4px solid green 
        padding 20px
        display flex
        justify-content center
        align-items center
        flex-direction column
        margin-bottom 10px
        .weather_temp
            font-size 50px
        .weather_desc
            font-size 30px
        .weather_detailed
            display flex
            justify-content center
            align-items center
            flex-direction column
            font-size 13px